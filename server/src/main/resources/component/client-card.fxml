   <ImageView fitHeight="95.0" fitWidth="129.0" layoutX="116.0" layoutY="32.0" pickOnBounds="true" preserveRatio="true">
      <Image url="@../images/computer-icon.png" />
   </ImageView>

   <!-- Trạng thái -->
   <Circle fx:id="iconStatus" fill="#04ef72" layoutX="331.0" layoutY="17.0" radius="5.0" stroke="BLACK" strokeType="INSIDE" styleClass="green-background" />
   <FlowPane layoutX="2.0" layoutY="131.0" prefHeight="79.0" prefWidth="415.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
      <children>
      
         <!-- Địa chỉ IP -->
         <Label fx:id="labelIpAddress" prefWidth="100.0" text="IP Address" textFill="WHITE">
            <FlowPane.margin>
               <Insets left="80.0" />
            </FlowPane.margin>
         </Label>
         <Label id="lbIpAddress" fx:id="txtIPAddress" prefHeight="22.0" prefWidth="150.0" styleClass="blue-text" stylesheets="@../styles/styles.css" text="192.168.1.1" textFill="WHITE" />
      
