         <Label fx:id="labelOSVersion" prefWidth="100.0" text="OS version" textFill="WHITE">
            <FlowPane.margin>
               <Insets left="80.0" />
            </FlowPane.margin>
         </Label>
         <Label id="lbOSVersion" fx:id="txtOSVersion" prefHeight="22.0" prefWidth="150.0" styleClass="blue-text" stylesheets="@../styles/styles.css" text="Linux 22.04 LTS" textFill="WHITE" />
      </children>
   </FlowPane>

   <!-- Style classes -->
   <styleClass>
      <String fx:value="card-backgroud-color" />
      <String fx:value="gray-border" />
   </styleClass>

   <cursor>
      <Cursor fx:constant="HAND" />
   </cursor>

   <effect>
      <DropShadow />
   </effect>
</AnchorPane>
