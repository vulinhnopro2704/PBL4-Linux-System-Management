<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<AnchorPane fx:id="whitelistPane" prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.serverapp.controller.view.WhitelistController">
    <children>
        <Label layoutX="30.0" layoutY="30.0" prefHeight="30.0" prefWidth="340.0" text="Chọn dải địa chỉ IP có thể truy cập" textFill="black" />

        <ComboBox fx:id="ipAccessComboBox" layoutX="30.0" layoutY="70.0" prefWidth="340.0">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Cho phép tất cả" />
                    <String fx:value="Tùy chọn" />
                    <String fx:value="Từ chối tất cả" />
                </FXCollections>
            </items>
        </ComboBox>

        <AnchorPane fx:id="customIpPane" layoutX="30.0" layoutY="120.0" prefHeight="80.0" prefWidth="340.0" visible="false">
            <children>
                <Label layoutX="0.0" layoutY="10.0" text="Cho phép IP từ..." textFill="black" />
                <TextField fx:id="startIpTextField" layoutX="100.0" layoutY="10.0" prefWidth="120.0" />
                <Label layoutX="230.0" layoutY="10.0" text="đến..." textFill="WHITE" />
                <TextField fx:id="endIpTextField" layoutX="270.0" layoutY="10.0" prefWidth="120.0" />
            </children>
        </AnchorPane>

        <Button fx:id="saveButton" layoutX="90.0" layoutY="220.0" mnemonicParsing="false" prefHeight="39.0" prefWidth="100.0" text="Lưu" />
        <Button fx:id="cancelButton" layoutX="210.0" layoutY="220.0" mnemonicParsing="false" prefHeight="39.0" prefWidth="100.0" text="Thoát" />
    </children>
</AnchorPane>
